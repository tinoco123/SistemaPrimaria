@model IEnumerable<SistemaPrimaria.Models.Maestro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<List<string>> datosMaestros = (List<List<string>>)ViewBag.datosMaestros;
    List<int> maestrosId = new List<int>();
    foreach (var item in ViewBag.maestros)
    {
        maestrosId.Add(item.Id);
    }
}

<h1>Lista de maestros</h1>

<p>
    <a asp-action="Create">Agregar nuevo maestro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Cédula:</strong>
            </th>
            <th>
                <strong>Nombre:</strong>
            </th>
            <th>
                <strong>Apellido Materno:</strong>
            </th>
            <th>
                <strong>Apellido Paterno:</strong>
            </th>
            <th>
                <strong>Teléfono:</strong>
            </th>
            <th>
                <strong>Dirección:</strong>
            </th>
            <th>
                <strong>Grupo asignado:</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < datosMaestros.Count; i++) 
        { 
            <tr>
                <td>
                    @datosMaestros[i][0]  @* Cedula*@
                </td>
                <td>
                    @datosMaestros[i][1]  @* Nombre*@
                </td>
                <td>
                    @datosMaestros[i][2]  @* Apellido Materno*@
                </td>
                <td>
                    @datosMaestros[i][3]  @* Apellido Paterno*@
                </td>
                <td>
                    @datosMaestros[i][4]  @* Telefono*@
                </td>
                <td>
                    @datosMaestros[i][5]  @* Direccion*@
                </td>
                <td>
                    @datosMaestros[i][6]  @* Grupo asignado*@
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@maestrosId[i]">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@maestrosId[i]">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
