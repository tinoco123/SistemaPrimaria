@model IEnumerable<SistemaPrimaria.Models.Grupo>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create">Agregar un nuevo grupo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Grado:</strong>
            </th>
            <th>
                <strong>Nombre del grupo:</strong>
            </th>
            <th>
                <strong>ID del maestro:</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreGrupo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMaestro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Información</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
