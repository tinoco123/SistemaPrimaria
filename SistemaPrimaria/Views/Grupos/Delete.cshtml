@model SistemaPrimaria.Models.Grupo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Estás seguro que deseas eliminar este grupo?</h3>
<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <strong>Grado:</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grado)
        </dd>
        <dt class = "col-sm-2">
            <strong>Nombre del grupo:</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreGrupo)
        </dd>
        <dt class = "col-sm-2">
            <strong>ID del maestro:</strong>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMaestro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
