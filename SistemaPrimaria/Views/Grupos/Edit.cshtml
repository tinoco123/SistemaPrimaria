@model SistemaPrimaria.Models.Grupo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edita grupo</h1>

<h4>Apartado para editar los datos de un grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombreGrupo" class="control-label"><strong>Nombre del grupo:</strong></label>
                <input asp-for="NombreGrupo" class="form-control" />
                <span asp-validation-for="NombreGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMaestro" class="control-label"><strong>Maestro asignado:</strong></label>
                <input asp-for="IdMaestro" class="form-control" />
                <span asp-validation-for="IdMaestro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
